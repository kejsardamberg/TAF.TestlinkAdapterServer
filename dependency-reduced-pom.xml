<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>se.claremont</groupId>
  <artifactId>TafTestlinkAdapterServer</artifactId>
  <name>TAF Testlink Adapter Server</name>
  <version>1.1</version>
  <description>TAF Testlink Adapter Server - Gateway/proxy solution for bringing test run results from TAF to Testlink</description>
  <url>http://www.claremont.se</url>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <build>
    <finalName>TafTestlinkAdapterServer</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.5.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10.4</version>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>se.claremont.taftestlinkadapter.server.App</mainClass>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>TheCentralRepository</id>
      <name>TheCentralRepository</name>
      <url>http://search.maven.org</url>
    </repository>
    <repository>
      <id>Sonartype</id>
      <name>Sonartype</name>
      <url>https://oss.sonatype.org</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>TheCentralRepository</id>
      <name>TheCentralRepository</name>
      <url>http://search.maven.org</url>
    </pluginRepository>
    <pluginRepository>
      <id>Sonartype</id>
      <name>Sonartype</name>
      <url>https://oss.sonatype.org</url>
    </pluginRepository>
    <pluginRepository>
      <id>github</id>
      <name>github</name>
      <url>https://github.com/</url>
    </pluginRepository>
  </pluginRepositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <jackson.version>2.6.3</jackson.version>
    <capability.jetty.version>9.4.2.v20170220</capability.jetty.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <capability.hk2.version>2.5.0-b36</capability.hk2.version>
    <capability.glassfish.version>2.23.2</capability.glassfish.version>
  </properties>
</project>

